.table-of-contents {
  margin: 2rem 0;
  font-weight: 400;
  line-height: 1.4;
  font-family: 'Roboto';
  letter-spacing: 0;
  font-size: 1.25rem;

  ul {
    list-style-type: '\21B3';
    column-count: 2;

    li {
      &:hover {
        color: #0058E6;
        text-decoration: none !important;
      }

      a {
        margin-left: 10px;
        color: #161616;

        &:hover {
          color: inherit;
          text-decoration: none !important;
        }
      }
    }
  }
}
